{
  "name": "backend-api",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "init-db": "node src/database/init.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.17.1",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/services/**/*.js",
      "src/controllers/**/*.js",
      "src/utils/**/*.js",
      "!src/server.js"
    ],
    "testMatch": [
      "**/__tests__/unit/services/**/*.test.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/database/",
      "/src/routes/"
    ],
    "verbose": true,
    "testTimeout": 10000
  }
}
